<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" prefHeight="600.0" prefWidth="1490.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cloud.storage.client.Controller">
   <HBox alignment="TOP_CENTER" prefHeight="35.0" prefWidth="700.0" spacing="600.0">
      <children>
         <Label alignment="CENTER" contentDisplay="CENTER" text="Local storage">
            <font>
               <Font name="Times New Roman Bold" size="24.0" />
            </font>
         </Label>
         <Label text="Cloud storage">
            <font>
               <Font name="Times New Roman Bold" size="24.0" />
            </font>
         </Label>
      </children>
   </HBox>
   <HBox alignment="CENTER" fillHeight="false" prefHeight="500.0" prefWidth="700.0" spacing="5.0" VBox.vgrow="ALWAYS">
      <children>
         <TableView fx:id="tableView" prefHeight="600.0" prefWidth="700.0">
           <columns>
             <TableColumn fx:id="fileName" prefWidth="75.0" text="File name" />
             <TableColumn fx:id="fileSize" prefWidth="75.0" text="File size, bytes" />
           </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
         <ListView fx:id="listView" prefHeight="600.0" prefWidth="700.0" />
      </children>
   </HBox>
    <HBox alignment="CENTER" spacing="10.0">
      <Button fx:id="bnSend" minWidth="225.0" onAction="#bnSendClick" text="Send file" HBox.hgrow="ALWAYS">
         <font>
            <Font name="Times New Roman Bold" size="18.0" />
         </font></Button>
        <Button fx:id="bnRemove" minWidth="225.0" text="Remove file">
         <font>
            <Font name="Times New Roman Bold" size="18.0" />
         </font></Button>
      <Button fx:id="bnUpdate" minWidth="225.0" text="Update file">
         <font>
            <Font name="Times New Roman Bold" size="18.0" />
         </font></Button>
        <Button fx:id="bnLoadCl" minWidth="225.0" text="Load file">
         <font>
            <Font name="Times New Roman Bold" size="18.0" />
         </font></Button>
      <Button fx:id="bnRemoveCl" minWidth="225.0" text="Remove file">
         <font>
            <Font name="Times New Roman Bold" size="18.0" />
         </font></Button>
      <Button fx:id="bnUpdateCl" minWidth="225.0" text="Update file">
         <font>
            <Font name="Times New Roman Bold" size="18.0" />
         </font></Button>
    </HBox>
</VBox>
